<p id="notice"><%= notice %></p>

<h1>Listing Produtos</h1>
<div class="row">

<table  >
  <thead class="list_description">
    <tr >
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Url image</th>
      <th>Preco</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="list_actions">
    <% @produtos.each do |produto| %>
      <tr class="<%= cycle('list-group-item-success', 'list-group-item-danger') %>">
        <td><%= produto.titulo %></td>
        <td  ><%= produto.descricao %></td>
        
        <td  ><%= image_tag(produto.url_image, class: 'list_image')%></td>
        <td><%= produto.preco %></td>
        <td><%= link_to 'Show', produto, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_produto_path(produto), class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', produto, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

<%= link_to 'New Produto', new_produto_path, class: 'btn btn-primary btn-lg ' %>
</div>

